    <StackLayout>
        
        <Label Text="Avoid triggering the bomb!" HorizontalOptions="Center" VerticalOptions="Center" />
        <Label Text="Points: "/>
        
        <Button Text="1"
                VerticalOptions="CenterAndExpand"
                HorizontalOptions="Center"
                Clicked="ButtonClicked"/>
        <Button Text="2"
                VerticalOptions="CenterAndExpand"
                HorizontalOptions="Center"
                Clicked="ButtonClicked"/>
        <Button Text="3"
                VerticalOptions="CenterAndExpand"
                HorizontalOptions="Center"
                Clicked="ButtonClicked"/>
            
        
    </StackLayout>
</ContentPage>